<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SportTheme" parent="android:Theme.Holo.Light">
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:windowBackground">@color/bgcolor</item>
        <item name="android:colorBackground">@color/bgcolor</item>
        <item name="android:spinnerStyle">@style/spinner</item>
        <item name="android:buttonBarButtonStyle">@style/button</item>
    </style>

    <style name="spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/bbutton</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="rbutton" parent="@style/button">
        <item name="android:background">@drawable/rbutton</item>
    </style>


    <style name="bspinner">
        <item name="android:background">@drawable/spinner</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:drawableRight">@drawable/arrow_down_float</item>
        <item name="android:drawablePadding">10dp</item>
    </style>


    <style name="label">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="header">
        <item name="android:background">@drawable/text_hdr</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="gheader" parent="@style/header"> 
        <item name="android:background">@drawable/gtext_hdr</item>
    </style>

    <style name="sepg1"> 
        <item name="android:background">@color/gray</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
    </style>



    <style name="row">
        <item name="android:padding">3dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="wrow" parent="@style/row">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="trow" parent="@style/row">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="left_row" parent="@style/trow">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>



    <style name="low_bottom_row" parent="@style/row">
        <item name="android:paddingBottom">0dp</item>
    </style>


    <style name="small">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_margin">0dp</item>
   </style>



    <style name="listrow">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="picbtn">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="fedit">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/edit</item>
    </style>

    <style name="sqedit">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sq_edit</item>
    </style>


    <style name="left_edit" parent="@style/fedit">
        <item name="android:background">@drawable/left_edit</item>
    </style>



</resources>